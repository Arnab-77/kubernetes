9.pv.yaml
apiVersion: v1
kind: PersistentVolume
metadata:
  name: app-config
spec:
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteOnce
  hostpath:
    path: "/srv/app-config"
kubectl apply -f pv.yaml
========================================================================
10.pvc.yaml
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pv-volume
spec:
  storageClassName: csi-hostpath-sc
  accessModes:
     - ReadWriteOnce
  resources:
    requests:
      storage: 10Mi
kubectl apply -f pvc.yaml

pod.yaml
apiVersion: v1
kind: Pod
metadata:
  name: web-server
spec:
  volumes:
    - name: vol1
      persistentVolumeClaim:
          claimName: pv-volume
  containers:
    - name: nginx
      image: nginx
      volumeMounts: 
        - mountPath: "/usr/share/nginx/html"
          name: vol1
kubectl apply -f pod.yaml
kubectl edit pvc/pv-volume

